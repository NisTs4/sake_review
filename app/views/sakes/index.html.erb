<% if !user_signed_in? %>
  <div class="jumbotron">
    <h1>Your Favorite Sake Reviewed</h1>
    <p>aaaaaa</p>
    <p><%= link_to "Sign up to write a Review", new_user_registration_path, class: "btn btn-primary btn-lg" %></p>
  </div>
<% end %>

<div class="row">
  <% @sakes.each do |sake| %>
    <div class="col-sm-6 col-md-3">
      <div class="thumbnail">
	<%= link_to (image_tag sake.image.url(:medium), dlass: 'image'), sake %>
      </div>
    </div>
  <% end %>
</div>
